{
  "name": "Bookdown Dev Container",
  "image": "ghcr.io/kleuveld/koentainr:0.3.r_cheatsheet",
  "workspaceFolder": "/doc", // Set the container's working directory to /doc
  "workspaceMount": "source=/home/koen/git/r_cheatsheet,target=/doc,type=bind",
  "mounts": [
    "type=bind,source=/home/koen/.ssh,target=/root/.ssh,consistency=cached"
  ],
  // "mounts": [
  //   "type=bind,source=${localEnv:HOME}/.ssh,target=/root/.ssh,consistency=cached"
  // ],
  // Override for Windows
  // "overrideForWindows": {
  //   "mounts": [
  //     "type=bind,source=${localEnv:USERPROFILE}\\.ssh,target=/root/.ssh,consistency=cached"
  //   ]
  // }
  "overrideCommand": true, // Prevents the entrypoint script from running
  "customizations": {
    "vscode": {
      "extensions": [
        "reditorsupport.r-syntax",
        "reditorsupport.r",
        "ikuyadeu.r-pack",
        "yzhang.markdown-all-in-one",
        "ritwickdey.liveserver", 
        "mhutchie.git-graph"

      ]
    }
  }
}